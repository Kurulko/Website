@{
    ViewData["Title"] = "Students";
}
@section forHeader {
    <p>Students</p>
}

@section previous {
    <div class="fixed-previous"><a asp-controller="Home" asp-action="Index">Previous</a></div>
}

@model List<MVC_1.Models.Abstract.Student>
Different information about silly students

<table border="1" cellpadding="2" cellspacing="2" @*class="notautomargin"*@>
    <thead>
        <tr>
            <td>Id</td>
            <td>Фамилия</td>
            <td>Имя</td>
        </tr>
    </thead>
    @for (int i = 0; i < Model.Count; ++i)
    {
        <tr>
            <td>@Model[i].Id</td>
            <td><a asp-controller="Classmates" asp-action="Information" asp-route-id="@i">@Model[i].LastName</a></td>
            <td>@Model[i].FirstName</td>
        </tr>
    }
</table>
<br />
<br />

<style>
    .main-page {
        background-image: url(../BackgroundImage/students.png);
        height: calc(100vh - 28.67px );
        background-repeat: no-repeat;
        background-position-y: 70px;
    }
</style>
