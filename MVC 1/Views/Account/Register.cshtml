@model RegisterModel

@{
    Layout = null;
}

<html>
<head>
    <title>Register</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <style>
        body {
            background-color: #202224;
            color: white;
            text-align: center;
        }
        a:hover {
            color: white;
            text-decoration-line: none;
            text-decoration: none;
        }

    </style>
</head>
<body>
    <p class="btn btn-outline-primary" style="width:80px"><a asp-action="Login">Login</a></p>
    <br />
    <form method="post" class="form-group">
        <div asp-validation-summary="ModelOnly" class="validation"></div>
        <p class="col-md-6 mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>

            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>

            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>

            <br /><input type="submit" value="Register" class="btn btn-outline-primary" />
        </p>
    </form>
</body>
</html>
